{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"baseUrl": "./",
		"outDir": "./dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true,
		"skipLibCheck": true
	},
	"paths": {
		"@/*": ["./src/*"]
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
